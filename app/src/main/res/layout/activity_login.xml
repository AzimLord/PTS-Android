<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.ktmb.pts.ui.credentials.viewmodel.LoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/v_primary"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/btn_login"
            android:layout_marginBottom="8dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@+id/btn_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/view.space.normal"
                android:paddingVertical="@dimen/view.space.xxxlarge">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/view.space.normal"
                    app:srcCompat="@drawable/ic_ktmb" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/view.space.xxxlarge"
                    android:fontFamily="@font/opensans_extra_bold"
                    android:text="@string/label.ktmb_captain"
                    android:textSize="@dimen/text.xxlarge" />

                <EditText
                    android:id="@+id/et_ktmb_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/view.space.normal"
                    android:background="@drawable/bg_rounded_grey"
                    android:inputType="textCapCharacters"
                    android:hint="@string/label.ktmb_id"
                    android:paddingHorizontal="@dimen/view.space.xlarge"
                    android:paddingVertical="@dimen/view.space.small"
                    android:textSize="@dimen/text.normal" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/view.space.normal"
                    android:background="@drawable/bg_rounded_grey"
                    android:hint="@string/label.password"
                    android:inputType="textPassword"
                    android:paddingHorizontal="@dimen/view.space.xlarge"
                    android:paddingVertical="@dimen/view.space.small"
                    android:textSize="@dimen/text.normal" />
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/view.space.normal"
            android:layout_marginTop="@dimen/view.space.small"
            android:layout_marginBottom="@dimen/view.space.normal"
            android:text="@string/label.login"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="login" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>